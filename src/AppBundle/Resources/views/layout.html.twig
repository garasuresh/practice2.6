{% extends '::base.html.twig' %}

{% block title %}Boiler Plate{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/vendor/bootstrap/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/vendor/bootstrap/bootstrap-responsive.css') }}">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

{% endblock stylesheets %}

{% block header %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{path("homepage")}}">Boiler Plate</a>
                <div class="nav-collapse">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <ul class="nav pull-left">
                            {# To arrange menu items or label in the right side #}
                            <li class="divider-vertical"></li>
                            <li><a class="brand" href="{{path("conditions")}}">Conditions</a></li>
                            <li class="divider-vertical"></li>
                            <li><a class="brand" href="{{path("symptom")}}">Symptoms</a></li>
                        </ul>
                    {% endif %}

                    <ul class="nav pull-right">
                        <li class="divider-vertical"></li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li class="dropdown active">
                                <a href="javascript:" class="dropdown-toggle pull-right" data-toggle="dropdown">{{app.user.username}} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('fos_user_security_logout') }}">
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="active">
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            </li>
                        {% endif %}
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/jquery-1.7.2.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/jquery.tmpl.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-alert.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-button.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-carousel.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-collapse.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-dropdown.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-modal.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-tooltip.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-popover.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-scrollspy.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-tab.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-transition.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/bootstrap/bootstrap-typeahead.js') }}"></script>

    <script src="{{ asset('bundles/app/js/vendor/jquery-ui/jquery.ui.core.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/jquery-ui/jquery.ui.widget.js') }}"></script>
    <script src="{{ asset('bundles/app/js/vendor/jquery-ui/jquery.ui.datepicker.js') }}"></script>
{% endblock %}